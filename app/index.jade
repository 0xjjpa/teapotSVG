!!! 5
html.no-js
  include views/config
  mixin thumbnail(name, description, image)
    li.thumbnail
      .media
        a.pull-left(href='#')
          img.media-object(data-src='holder.js/64x64', alt='64x64', style='width: 64px;', src='#{image}')
        .media-body
          h4.media-heading #{name}
          | #{description}
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    title #{app}
    meta(name='description', content='')
    meta(name='viewport', content='width=device-width')
    //
       Place favicon.ico and apple-touch-icon.png in the root directory 
    //
      | build:css(\{.tmp,app}) styles/main.css 
    link(rel='stylesheet', href='bower_components/flat-ui/css/flat-ui.css')
    link(rel='stylesheet', href='styles/main.css')
    //
       endbuild
    //
      build:js scripts/main.js 
    script(src='bower_components/polymer/polymer.min.js')
    //
      endbuild 
    //
       build:js scripts/vendor/modernizr.js 
    script(src='bower_components/modernizr/modernizr.js')
    //
       endbuild 
    // --Shadow DOM version--
    link(rel="import", href="templates/views/blocks/gears/poly-gears.html")
  body
    .container
      .demo-headline
        h1.demo-logo
          // --Shadow DOM version--
          gears
          //include views/blocks/gears/gears
          | #{app}
          small Web animations lab gallery for testing and benchmarking animations
      .row(style="padding-bottom: 100px")
        .span6.animations
          ul.thumbnails
            +thumbnail("Gears", "Two gears rotating. The container is rotated through CSS3 transform and translate option", "/views/blocks/gears/gears.jpg")
        .span6
          .viewport
            gears
    footer
      .container
        .row
          .span7
            h3.footer-title 
              +cw
          .span5
            ul.nav.nav-pills.footer-title.pull-right
              li
                a(href='http://www.facebook.com/centralway', target='_blank', class='facebook')
              li
                a(href='http://twitter.com/centralway', target='_blank', class='twitter')                
              li
                a(href='https://plus.google.com/109392403559257694160/posts"', target='_blank', class='gplus')
